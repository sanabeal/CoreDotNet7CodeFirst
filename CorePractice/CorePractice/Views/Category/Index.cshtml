@model List<Category>



<div class="container">
    <div class="row pt-4">
        <div class="col-10">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-2 text-end">
            <a asp-action="Create" class="btn btn-primary form-control">
                New Category
            </a>
        </div>
    </div>


    <table class="table table-bodered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th class="text-end">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td class="text-end">
                        <div class="w-50 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary form-control">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger form-control">
                                <i class="bi bi-trash-fill"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>